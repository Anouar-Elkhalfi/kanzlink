<h1><%= @collection.name %></h1>

<%= link_to 'New Link', new_collection_link_path(@collection) %>

<ul>
  <% @collection.links.each do |link| %>
    <li>
      <%= link_to link.title, link %>
      <%= link_to 'Edit', edit_link_path(link) %>
      <%= link_to 'Delete', link_path(link), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_collection_path(@collection) %> |
<%= link_to 'Back', collections_path %> |
<%= link_to 'Delete', collection_path(@collection), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>

